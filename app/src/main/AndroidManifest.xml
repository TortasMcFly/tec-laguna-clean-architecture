<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tortasmcfly.teclaguna">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".TecLagunaApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.TecLaguna">
        <activity
            android:name=".core.presentation.main_activities.MainActivity"
            android:theme="@style/Theme.TecLaguna"
            android:screenOrientation="portrait"
            android:noHistory="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".core.presentation.main_activities.HomeActivity"
            android:theme="@style/Theme.TecLaguna"
            android:screenOrientation="portrait"
            android:exported="true"/>
    </application>

</manifest>